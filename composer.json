{
    "name": "datasift/testrest-extension",
    "description": "Library to test end-to-end RESTful services using Behat",
    "type": "library",
    "homepage": "https://github.com/datasift/ms-lib-testrest",
    "license": "MIT",
    "keywords": ["ms-lib-testrest", "testrest", "behat", "testing", "restful", "API", "datasift"],
    "authors": [
        {
            "name": "Nicola Asuni",
            "email": "nicola.asuni@datasift.com"
        },
        {
            "name": "Nathan Macnamara",
            "email": "nathan.macnamara@datasift.com"
        },
        {
            "name": "Community contributors",
            "homepage": "https://github.com/DataSift/ms-lib-testrest/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "guzzlehttp/guzzle": "4 - 5",
        "phpunit/phpunit": "4 - 5"
    },
    "autoload": {
        "psr-4": {
            "DataSift\\TestRestExtension\\": "src/"
        }
    },
    "require-dev": {
        "symfony/process": "~2.1",
        "silex/silex": "~1",
        "mheap/Silex-Memcache": "1.0.0"
    },
    "scripts": {
        "test": "behat"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    }
}
